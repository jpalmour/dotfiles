#!/usr/bin/env bash
set -euo pipefail

{{ if .is_work_machine }}
echo "Work machine detected, skipping installation of AI tools."
exit 0
{{ end }}

# Load nvm
if [ -s "$HOME/.nvm/nvm.sh" ]; then
  . "$HOME/.nvm/nvm.sh"
  nvm use --lts
fi

# Install/upgrade AI CLI tools
npm install -g @openai/codex @anthropic-ai/claude-code @google/gemini-cli
