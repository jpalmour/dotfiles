# Ensure locale is set (prevents errors when SSH'ing from mobile terminals like Termius)
# Termius and other SSH clients may forward LC_* variables for locales not installed on the remote
export LANG="en_US.UTF-8"
export LC_ALL="en_US.UTF-8"
unset LC_CTYPE LC_COLLATE LC_MESSAGES LC_MONETARY LC_NUMERIC LC_TIME 2>/dev/null

{{- if eq .chezmoi.os "linux" }}
# SSH agent for non-GNOME desktops (XFCE keyring doesn't support signing)
if [[ "$XDG_CURRENT_DESKTOP" != *"GNOME"* ]] && command -v keychain >/dev/null 2>&1; then
  eval "$(keychain --eval --quiet --agents ssh ~/.ssh/id_ed25519_dev)"
fi
{{- end }}

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

{{- if eq .chezmoi.os "darwin" }}
# Initialize Homebrew (required for PATH and completions)
if [[ -x /opt/homebrew/bin/brew ]]; then
  eval "$(/opt/homebrew/bin/brew shellenv)"
elif [[ -x /usr/local/bin/brew ]]; then
  eval "$(/usr/local/bin/brew shellenv)"
fi
{{- end }}

export ZSH=$HOME/.oh-my-zsh

# prevent ~/.oh-my-zsh from drifting out of sync with chezmoi's source state
DISABLE_AUTO_UPDATE="true"

# See https://github.com/robbyrussell/oh-my-zsh/wiki/Themes
ZSH_THEME="powerlevel10k/powerlevel10k"

COMPLETION_WAITING_DOTS="true"

# Plugins can be found in ~/.oh-my-zsh/plugins/*
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
{{- $plugins := .zshPlugins -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $plugins = append $plugins "brew" -}}
{{- end -}}
plugins=({{ $plugins | join " " }})

source $ZSH/oh-my-zsh.sh

export EDITOR='vim'

export PATH="$PATH:~/bin"

# Ensure GitHub repos directory exists and is on cdpath for quick access.
mkdir -p -- "$HOME/repos/github.com/jpalmour"
typeset -gU cdpath
cdpath=("$HOME/repos/github.com/jpalmour" $cdpath)
for _p in "$HOME/repos/github.com/jpalmour/"*(N); do
  [[ -d $_p ]] && cdpath=("$_p" $cdpath)
done

{{- if eq .chezmoi.os "darwin" }}
# Add VS Code to PATH (installed via Homebrew cask)
if [[ -d "/Applications/Visual Studio Code.app/Contents/Resources/app/bin" ]]; then
  export PATH="$PATH:/Applications/Visual Studio Code.app/Contents/Resources/app/bin"
fi
{{- end }}

# NVM setup
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"   # loads nvm
[ -s "$NVM_DIR/bash_completion" ] && . "$NVM_DIR/bash_completion"  # optional completions

# uv setup
export PATH="$HOME/.local/bin:$PATH"
# Add global venv to PATH for globally installed Python packages
[ -d "$HOME/.venv-global/bin" ] && export PATH="$HOME/.venv-global/bin:$PATH"

# Load secrets if present (fetched from 1Password via chezmoi when requested).
if [ -f "$HOME/.secrets" ]; then
  set -a
  source "$HOME/.secrets"
  set +a
fi

{{- if .is_work_machine }}
source ~/.work-secrets.sh;
{{- end }}

# Chezmoi aliases
alias ca='chezmoi apply'
alias ca-all='CHEZMOI_FETCH_1PASS=1 chezmoi apply'

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
# Kubernetes: use user kubeconfig when present
if [[ -f "$HOME/.kube/config" ]]; then
  export KUBECONFIG="$HOME/.kube/config"
fi
