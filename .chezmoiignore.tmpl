!private_AppData/Local/Packages/Microsoft.WindowsTerminal_8wekyb3d8bbwe/LocalState/settings.json.tmpl
{{- end }}

{{- if .is_work_machine }}
.chezmoiscripts/windows/install-ai-tools.ps1
.chezmoiscripts/linux/install-ai-tools.sh
.chezmoiscripts/darwin/install-ai-tools.sh
{{- end }}

{{- if or (not .is_work_machine) (.is_wsl) }}
.config/1Password/**
{{- end }}

