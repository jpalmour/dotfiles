{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "transient_prompt": {
    "background": "transparent",
    "foreground_templates": [
      "{{ if gt .Code 0 }}#FF5252{{ end }}",
      "#D4E157"
    ],
    "template": "‚ùØ "
  },
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "background": "#546E7A",
          "foreground": "#26C6DA",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 2
          },
          "style": "plain",
          "template": " {{ if gt (len .Path) 20 }}...{{ substr (sub (len .Path) 20) (len .Path) .Path }}{{ else }}{{ .Path }}{{ end }} ",
          "type": "path"
        },
        {
          "background": "#546E7A",
          "foreground": "#D4E157",
          "style": "plain",
          "template": "<#26C6DA>\ue0b1 </>{{ if gt (len .HEAD) 15 }}{{ trunc 15 .HEAD }}...{{ else }}{{ .HEAD }}{{ end }} ",
          "type": "git"
        },
        {
          "background_templates": [
            "{{ if gt .Code 0 }}#FF5252{{ else }}#D4E157{{ end }}"
          ],
          "foreground": "#546E7A",
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\ue0b0",
          "type": "status"
        },
        {
          "background": "transparent",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#FF5252{{ else }}#D4E157{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "style": "plain",
          "template": "\ue0b0 ",
          "type": "status"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "background": "#546E7A",
          "foreground": "#D4E157",
          "leading_diamond": "\ue0b2",
          "style": "diamond",
          "template": " {{ .HostName }} ",
          "type": "session"
        },
        {
          "background": "#546E7A",
          "foreground": "#26C6DA",
          "style": "plain",
          "template": "\ue0b3 {{ dateInZone \"15:04:05Z\" .CurrentDate \"UTC\" }} ",
          "type": "time"
        }
      ],
      "type": "rprompt"
    }
  ],
  "version": 3
}